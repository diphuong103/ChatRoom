<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.chatroom.ChatClientController" prefHeight="700.0" prefWidth="1000.0">

    <!-- Header -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #667eea; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Chat Room" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
                <Label fx:id="lblUsername" text="User: " textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnDisconnect" text="Ngắt kết nối" onAction="#handleDisconnect"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Chat Mode Selection -->
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 10; -fx-background-radius: 5;">
                <Label text="Chế độ chat:" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>
                <RadioButton fx:id="rbPublic" text="Công khai (*)" textFill="WHITE" onAction="#handlePublicMode">
                    <font>
                        <Font size="12.0" />
                    </font>
                </RadioButton>
                <RadioButton fx:id="rbPrivate" text="Riêng tư (IP)" textFill="WHITE" onAction="#handlePrivateMode">
                    <font>
                        <Font size="12.0" />
                    </font>
                </RadioButton>
                <RadioButton fx:id="rbGroup" text="Nhóm (Group)" textFill="WHITE" onAction="#handleGroupMode">
                    <font>
                        <Font size="12.0" />
                    </font>
                </RadioButton>
                <Separator orientation="VERTICAL"/>

                <Button fx:id="btnCreateGroup" text="➕ Tạo nhóm" onAction="#handleCreateGroup"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button fx:id="btnManageGroups" text="⚙️ Quản lý nhóm" onAction="#handleManageGroups"
                        style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>

            <Label fx:id="lblCurrentChat" text="Chế độ: Chat công khai" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>

            <Label fx:id="lblGroupInfo" text="" textFill="WHITE">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
        </VBox>
    </top>

    <!-- Center - Chat Area -->
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="Khung chat:">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>

            <TextArea fx:id="txtChatArea" VBox.vgrow="ALWAYS" wrapText="true"
                      style="-fx-font-size: 13px; -fx-control-inner-background: #f5f5f5; -fx-font-family: 'Consolas', monospace;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="txtMessage" HBox.hgrow="ALWAYS"
                           promptText="Nhập tin nhắn..." style="-fx-font-size: 13px; -fx-padding: 10;"/>
                <Button fx:id="btnSend" text="Gửi" onAction="#handleSend"
                        style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"
                        prefWidth="100" prefHeight="40"/>
            </HBox>
        </VBox>
    </center>

    <!-- Right - Sidebar -->
    <right>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f0f0f0;" prefWidth="250">

            <!-- Online Users -->
            <VBox spacing="5">
                <Label text="👥 Người dùng online:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label text="(Double-click để chat riêng)" style="-fx-text-fill: #666;">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>
                <ListView fx:id="listOnlineUsers" prefHeight="150" style="-fx-font-size: 13px;"/>
            </VBox>

            <Separator/>

            <!-- My Groups -->
            <VBox spacing="5">
                <Label text="📁 Nhóm của tôi:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label text="(Double-click để chọn nhóm)" style="-fx-text-fill: #666;">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>
                <ListView fx:id="listMyGroups" prefHeight="120" style="-fx-font-size: 13px;"/>
            </VBox>

            <Separator/>

            <!-- Group Members Selection -->
            <VBox spacing="5">
                <Label text="✓ Chọn thành viên tạm thời:">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <Label text="(Giữ CTRL để chọn nhiều)" style="-fx-text-fill: #666;">
                    <font>
                        <Font size="10.0" />
                    </font>
                </Label>
                <ListView fx:id="listGroupMembers" prefHeight="100" style="-fx-font-size: 12px;"/>
            </VBox>

            <Separator/>

            <!-- Instructions -->
            <VBox spacing="5" style="-fx-background-color: #e0e0e0; -fx-padding: 10; -fx-background-radius: 5;">
                <Label text="📖 Hướng dẫn:" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
                <Label text="• *: Chat công khai" style="-fx-font-size: 10px;"/>
                <Label text="• IP: Double-click user" style="-fx-font-size: 10px;"/>
                <Label text="• Group: Tạo/chọn nhóm" style="-fx-font-size: 10px;"/>
                <Label text="• Tạo nhóm: Lưu thành viên" style="-fx-font-size: 10px;"/>
                <Label text="• Quản lý: Sửa nhóm" style="-fx-font-size: 10px;"/>
            </VBox>
        </VBox>
    </right>

</BorderPane>