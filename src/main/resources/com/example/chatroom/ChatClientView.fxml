<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.chatroom.ChatClientController" prefHeight="600.0" prefWidth="800.0">

    <!-- Header - Connection Panel -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2196F3; -fx-padding: 15;">
            <Label text="Chat Room Client - VKU" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Server IP:" textFill="WHITE" prefWidth="80"/>
                <TextField fx:id="txtServerIP" prefWidth="150"/>

                <Label text="Port:" textFill="WHITE" prefWidth="50"/>
                <TextField fx:id="txtPort" prefWidth="100"/>

                <Label text="Tên:" textFill="WHITE" prefWidth="50"/>
                <TextField fx:id="txtUsername" prefWidth="150"/>

                <Button fx:id="btnConnect" text="Kết nối" onAction="#handleConnect"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button fx:id="btnDisconnect" text="Ngắt kết nối" onAction="#handleDisconnect"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Center - Chat Area -->
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="Khung chat:">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>

            <TextArea fx:id="txtChatArea" VBox.vgrow="ALWAYS" wrapText="true"
                      style="-fx-font-size: 13px; -fx-control-inner-background: #f5f5f5;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="txtMessage" HBox.hgrow="ALWAYS"
                           promptText="Nhập tin nhắn..."/>
                <Button fx:id="btnSend" text="Gửi" onAction="#handleSend"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="80"/>
            </HBox>
        </VBox>
    </center>

    <!-- Right - Online Users List -->
    <right>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f0f0f0;"
              prefWidth="200">
            <Label text="Người dùng online:">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <ListView fx:id="listOnlineUsers" VBox.vgrow="ALWAYS"/>
        </VBox>
    </right>

</BorderPane>