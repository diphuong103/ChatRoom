<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.chatroom.LoginController"
            prefHeight="450.0" prefWidth="500.0"
            style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);">

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;">
            <!-- Logo/Title -->
            <VBox alignment="CENTER" spacing="5">
                <Label text="CHAT ROOM" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Label>
                <Label text="Hệ thống chat đa phương tiện" textFill="#E0E0E0">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </VBox>

            <!-- Login Form -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">
                <VBox spacing="8">
                    <Label text="Tên đăng nhập:">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Label>
                    <TextField fx:id="txtUsername" promptText="Nhập tên đăng nhập"
                               style="-fx-font-size: 13px; -fx-padding: 10;"/>
                </VBox>

                <VBox spacing="8">
                    <Label text="Mật khẩu:">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Label>
                    <PasswordField fx:id="txtPassword" promptText="Nhập mật khẩu"
                                   style="-fx-font-size: 13px; -fx-padding: 10;"/>
                </VBox>

                <Separator />

                <HBox spacing="10" alignment="CENTER">
                    <Label text="Server:">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Label>
                    <TextField fx:id="txtServerIP" prefWidth="120"
                               style="-fx-font-size: 12px;"/>
                    <Label text="Port:">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Label>
                    <TextField fx:id="txtPort" prefWidth="80"
                               style="-fx-font-size: 12px;"/>
                </HBox>

                <Label fx:id="lblStatus" text="" alignment="CENTER" textFill="RED">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>

                <HBox spacing="15" alignment="CENTER">
                    <Button fx:id="btnLogin" text="Đăng nhập" onAction="#handleLogin"
                            style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 30;"
                            prefWidth="150"/>
                    <Button fx:id="btnRegister" text="Đăng ký" onAction="#handleRegister"
                            style="-fx-background-color: #764ba2; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 30;"
                            prefWidth="150"/>
                </HBox>
            </VBox>

            <!-- Footer -->
            <Label text="© chat room " textFill="#E0E0E0">
                <font>
                    <Font size="11.0" />
                </font>
            </Label>
        </VBox>
    </center>

</BorderPane>