<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.chatroom.ServerGUIController"
            prefHeight="700.0" prefWidth="1000.0">

    <!-- Header -->
    <top>
        <VBox spacing="15" style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="CHAT SERVER MANAGEMENT" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblStatus" text="Server đã dừng" textFill="RED">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
            </HBox>

            <!-- Server Controls -->
            <HBox spacing="15" alignment="CENTER_LEFT"
                  style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 15; -fx-background-radius: 8;">
                <Label text="Port:" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="txtPort" prefWidth="100" style="-fx-font-size: 14px;"/>

                <Button fx:id="btnStart" text="▶ Khởi động Server" onAction="#handleStart"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 20;"/>

                <Button fx:id="btnStop" text="⏹ Dừng Server" onAction="#handleStop"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 20;"/>

                <Button text="🗑️ Xóa Log" onAction="#handleClearLog"
                        style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 20;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <VBox spacing="5">
                    <Label fx:id="lblOnlineUsers" text="Online: 0" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Label>
                    <Label fx:id="lblTotalConnections" text="Tổng kết nối: 0" textFill="WHITE">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Label>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- Center - Server Log -->
    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <HBox alignment="CENTER_LEFT">
                <Label text="📋 Server Log" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            </HBox>

            <TextArea fx:id="txtServerLog" VBox.vgrow="ALWAYS"
                      editable="false" wrapText="true"
                      style="-fx-font-family: 'Consolas', monospace; -fx-font-size: 12px; -fx-control-inner-background: #1e1e1e; -fx-text-fill: #00ff00;"/>
        </VBox>
    </center>

    <!-- Right - Connected Users -->
    <right>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #f5f5f5;" prefWidth="280">
            <Label text="👥 Người dùng đang kết nối">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>

            <ListView fx:id="listConnectedUsers" VBox.vgrow="ALWAYS"
                      style="-fx-font-size: 13px;"/>

            <VBox spacing="8" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;">
                <Label text="📊 Thống kê" style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                <Separator />
                <Label text="• Chế độ: Multicast" style="-fx-font-size: 12px;"/>
                <Label text="• Hỗ trợ: Chat công khai" style="-fx-font-size: 12px;"/>
                <Label text="• Hỗ trợ: Chat riêng tư" style="-fx-font-size: 12px;"/>
                <Label text="• Hỗ trợ: Chat nhóm" style="-fx-font-size: 12px;"/>
                <Label text="• Xác thực: Đăng ký/Đăng nhập" style="-fx-font-size: 12px;"/>
            </VBox>

        </VBox>
    </right>

    <!-- Bottom - Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #e0e0e0; -fx-padding: 10;" spacing="20" alignment="CENTER_LEFT">
            <Label text="Chat Server v2.0 - Multicast Edition" style="-fx-font-size: 12px;"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </bottom>

</BorderPane>